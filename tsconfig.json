{
    "compilerOptions": {
        "target": "es2021",
        "lib": ["es6"],
        "module": "commonjs",
        "rootDirs": ["src"],
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts",
        "src/data/movies/repos/helpers/paginationHandlers.ts",
        "test/domain/movies/useCases/testObjects.ts",
        "test/domain/movies/useCases/searchForMovie.spec.ts",
        "test/domain/movies/useCases/getTrendingMovies.spec.ts",
        "test/domain/movies/useCases/getMoviesByRegion.spec.ts",
        "test/domain/movies/useCases/getMoviesByGenre.spec.ts",
        "test/domain/movies/useCases/getMoviesByDecade.spec.ts",
        "test/domain/movies/useCases/getMovieById.spec.ts",
        "test/domain/movies/useCases/getGenres.spec.ts"
    ],
    "exclude": ["test*.ts"]
}
