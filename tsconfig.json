{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["es6"],
        "module": "commonjs",
        "rootDirs": ["src"],
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "functions/lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": ["test/*"]
}
